{
  "expo": {
    "name": "TimeCapsule",
    "slug": "timecapsule",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/appstore.png",
    "userInterfaceStyle": "dark",
    "assetBundlePatterns": [
      "**/*"
    ],
    "splash": {
      "image": "./assets/appstore.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F0D0B"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yoyo1803.timecapsule",
      "icon": "./assets/appstore.png",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "L'application a besoin d'accéder à la caméra pour le mode Réalité Augmentée.",
        "NSMotionUsageDescription": "L'application utilise l'accéléromètre pour orienter la vue en Réalité Augmentée."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/appstore.png",
        "backgroundColor": "#0F0D0B"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "package": "com.yoyo1803.timecapsule"
    },
    "web": {
      "bundler": "metro"
    },
    "scheme": "timecapsule",
    "plugins": [
      "expo-video",
      "expo-audio"
    ],
    "extra": {
      "eas": {
        "projectId": "6add2ae6-4e0b-4e23-af17-f18f2bb652a8"
      }
    }
  }
}